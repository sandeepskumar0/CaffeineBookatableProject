
@model IEnumerable<CaffeineBookatableProject.Models.Outlet>

@{
    ViewBag.Title = "Index";
}
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <h2>Outlet List</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </p>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Outlet Name
                    </th>
                    <th>
                        Outlet Description
                    </th>
                    <th>
                        Outlet Location
                    </th>
                    <th>
                        Outlet Picture
                    </th>
                    <th>
                        Branch
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.outlet_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.outlet_disc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.outlet_location)
                        </td>
                        <td>
                            <img src="@Url.Content(item.outlet_pic)" width="50px" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Branch.branch_name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.outlet_id }, new { @class = "btn btn-primary" })
                            <span class="btn-separator">|</span>
                            @Html.ActionLink("Details", "Details", new { id = item.outlet_id }, new { @class = "btn btn-info" })
                            <span class="btn-separator">|</span>
                            @Html.ActionLink("Delete", "Delete", new { id = item.outlet_id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

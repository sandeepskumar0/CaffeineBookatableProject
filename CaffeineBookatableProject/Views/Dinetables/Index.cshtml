@model IEnumerable<CaffeineBookatableProject.Models.Dinetable>

@{
    Layout = " ~/Views/Shared/_AdminLayoutPage.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        .btn-separator {
            margin: 0 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="mt-4">Dine Reservations</h2>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Person Name</th>
                        <th>Person Number</th>
                        <th>Dine Date</th>
                        <th>Dine Time</th>
                        <th>Outlet Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Person_Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Person_Number)</td>
                            <td>@Html.DisplayFor(modelItem => item.Dine_Date)</td>
                            <td>@Html.DisplayFor(modelItem => item.Dine_Time)</td>
                            <td>@Html.DisplayFor(modelItem => item.Outlet.outlet_name)</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Dine_Id }, new { @class = "btn btn-primary" })
                                <span class="btn-separator">|</span>
                                @Html.ActionLink("Details", "Details", new { id = item.Dine_Id }, new { @class = "btn btn-info" })
                                <span class="btn-separator">|</span>
                                @Html.ActionLink("Delete", "Delete", new { id = item.Dine_Id }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

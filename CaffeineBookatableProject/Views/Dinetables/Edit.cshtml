                    @Html.EditorFor(model => model.Dine_Time, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Dine_Time, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.Outlet_Bid, "Outlet_Bid", htmlAttributes: new { @class = "control-label col-md-2" })
